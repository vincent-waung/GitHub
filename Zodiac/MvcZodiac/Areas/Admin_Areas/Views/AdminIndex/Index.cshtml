                    iconCls:'icon-redo',
                    handler:function(){
                       var node = ctrlTree.tree('getSelected');
                        if(node){
                           ctrlTree.tree('expand',node.target);
                        }else{
                           ctrlTree.tree('expandAll');
                        }
                   }
                 }
                 ,
                  {
                    iconCls:'icon-undo',
                    handler:function(){
                       var node = ctrlTree.tree('getSelected');
                        if(node){
                           ctrlTree.tree('collapse',node.target);
                        }else{
                           ctrlTree.tree('collapseAll');
                        }
                   }
                 }
                 ]">
