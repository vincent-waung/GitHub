@{
    Layout = null;
}
@using Models;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>角色权限管理首页</title>
    <!--jquery easyui-->
    <link href="~/EasyUI/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/EasyUI/themes/icon.css" rel="stylesheet" />
    <script src="~/EasyUI/jquery.min.js"></script>
    <script src="~/EasyUI/jquery.easyui.min.js"></script>
    <script src="~/EasyUI/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datagrid-defaultview.js"></script>
    <!--自定义库-->
    <script src="~/Scripts/processingajaxmsg.js"></script>
    <script src="~/Scripts/xzUtil.js"></script>
    <!--自定义的图标样式-->
    <link href="~/Content/exticon.css" rel="stylesheet" />
    <script type="text/javascript">
        /*显示角色的表格*/
        var dgRole;
        /*当前的编辑行*/
        var editRow = undefined;
        var searchForm;
        var isDelData;
        var isShowData;
        $(function () {
            searchForm = $('#searchForm');
            isShowData = [
             {
                 value: true,
                 text: '可见'
             },
             {
                 value: false,
                 text: '不可见'
             }];
            isDelData = [
              {
                  value: true,
                  text: '禁用'
              },
              {
                  value: false,
                  text: '启用'
              }];
            dgRole = $("#dgRole").datagrid({
                view: detailview,
                iconCls: 'icon-save',
                fit: true,
                fitColumns: true,
                rownumbers: true,
                nowrap: false,
                animate: false,
                border: false,
                singleSelect: true,
                idField: 'rId',
                pagination: true,
                pageSize: 5,
                pageList: [5, 10, 15, 20, 25],
                url: '/Admin_Areas/Sys_Role/GetRoleInfoByConditionJoinPerIds',
                toolbar: [{
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        dgRole.datagrid('load');
                    }
                }
                ,
                '-', {
                    text: '设置',
                    iconCls: 'icon-add',
                    handler: function () {
                        showSetRolePerView();
                    }
                }
                ,
                '-', {
                    text: '取消选中',
                    iconCls: 'icon-undo',
                    handler: function () {
                        dgRole.datagrid('unselectAll');
                    }
                }
                ],               
                columns: [[
                     {
                         title: '角色编号',
                         field: 'rId',
                         sortable: true,
                         align: 'center',
                         width: 80
                     },
                     {
                         title: '角色名称',
                         field: 'rName',
                         width: 100,
                         sortable: true,
                         align: 'center',
                         formatter: function (value, row, index) {
                             if (value) {
                                 return xz.fs('<span title="{0}">{1}</span>', value, value);
                             }
                         }
                     },
                     {
                         title: '所属部门',
                         field: 'rDepId',
                         width: 200,
                         formatter: function (value, row, index) {
                             if (row.depName) {
                                 return row.depName;
                             } else {
                                 return value;
                             }
                         }


                     },
                     {
                         title: '是否可见',
                         field: 'rIsShow',
                         width: 80,
                         align: 'center',
                         formatter: xz.formatterEnable
                     }
                     ,
                     {
                         title: '是否禁用',
                         field: 'rIsDel',
                         align: 'center',
                         width: 80,
                         formatter: xz.formatterEnable
                     }
                     ,
                     {
                         title: '角色说明',
                         field: 'rRemark',
                         align: 'center',
                         width: 180
                     }
                     ,
                     {
                         title: '操作日期',
                         field: 'rAddTime',
                         align: 'center',
                         width: 180,
                         formatter: function (value) {
                             if (value) {

                                 return eval("new " + value.substr(1, value.length - 2)).toLocaleDateString();
                             }
                         }

                     }
                       ,
                     {
                         title: '操作',
                         field: 'Oper',
                         align: 'center',
                         width: 100,
                         formatter: function (value,row) {
                             var html = '<a href="#" onclick=\'showSetRolePerView()\'><span class="icon-perm" style="display:inline-block;vertical-align:middle;width:16px;height:16px;">&nbsp;</span>[设置权限]</a>';
                             return html;
                         }

                     }
                ]],
                detailFormatter: function (index, row) {
                    return '<div style="padding:2px;"><table id="ddv-' + index + '"></table></div>';
                },
                onExpandRow: function (index, row) {
                    $('#ddv-' + index).treegrid({
                        url: '/Admin_Areas/Sys_RolePermission/GePermissionInfoByCondition?roleId=' + (row.rId),
                        fitColumns: true,
                        height:'auto',
                        idField: 'pid',
                        treeField: 'pName',                       
                        frozenColumns: [[
                           {
                               title: '编号',
                               field: 'pid',
                               align: 'center',
                               hidden: true,
                               hidden:true,
                               width: 60
                           },
                             {
                                 title: '权限名称',
                                 field: 'pName',
                                 width: 180,
                                 formatter: function (value, row, index) {
                                     if (value) {
                                         return xz.fs('<span title="{0}">{1}</span>', value, value);
                                     }
                                 }
                             }
                        ]],
                        columns: [[
                            {
                                title: '权限地址',
                                colspan: 4
                            },
                        {
                            title: '图标',
                            field: 'pIco',
                            width: 60,
                            hidden: true,
                            rowspan: 2,
                            align: 'center',
                            formatter: function (value) {
                                if (!value) {
                                    return '';
                                } else {
                                    return xz.fs('<span class="{0}" style="display:inline-block;vertical-align:middle;width:16px;height:16px;"></span>', value);
                                }
                            }

                        },
                             {

                                 title: '上级权限',
                                 field: '_parentId',
                                 align: 'center',
                                 width: 100,
                                 hidden: true,
                                 rowspan: 2,
                                 formatter: function (value, row, index) {
                                     if (row.pPerName) {
                                         return row.pPerName;
                                     }
                                 }
                             }

                                ,
                                  {

                                      title: '有无权限',
                                      field: 'IsHPer',
                                      align: 'center',
                                      width: 80,                                 
                                      rowspan: 2,
                                      formatter: xz.formatterEnable
                                  }
                                ,
                             {
                                 title: '是否菜单',
                                 field: 'pIsShow',
                                 align: 'center',
                                 rowspan: 2,
                                 width: 80,
                                 formatter: xz.formatterEnable
                             }
                             ,
                             {
                                 title: '排序',
                                 field: 'pOrder',
                                 align: 'center',
                                 hidden: true,
                                 rowspan: 2,
                                 width: 50
                             }
                           
                             ,
                             {
                                 title: '操作日期',
                                 field: 'pOperTime',
                                 rowspan: 2,
                                 hidden: true,
                                 align: 'center',
                                 width: 100,
                                 formatter: function (value) {
                                     if (value) {
                                         return eval("new " + value.substr(1, value.length - 2)).toLocaleDateString();
                                     }
                                 }

                             }
                        ], [
                            {
                                title: '区域',
                                field: 'pAreaName',
                                align: 'center',
                                width: 60
                            }
                             ,
                             {
                                 title: '控制器',
                                 field: 'pControllerName',
                                 align: 'center',
                                 width: 80
                             }
                             ,
                              {
                                  title: '操作方法',
                                  field: 'pActionName',
                                  align: 'center',
                                  width: 80
                              }
                             , {
                                 title: '请求方式',
                                 field: 'pFormMethod',
                                 align: 'center',
                                 width: 70,
                                 formatter: function (value) {
                                     return value == 1 ? 'GET' : value == 2 ? 'POST' : 'HEAD';
                                 }
                             }
                        ]],
                        onResize: function () {
                            dgRole.datagrid('fixDetailRowHeight', index);
                        },
                        onLoadSuccess: function () {
                            setTimeout(function () {
                                dgRole.datagrid('fixDetailRowHeight', index);
                            }, 0);
                        }
                    });
                    dgRole.datagrid('fixDetailRowHeight', index);
                }

            });
        });
            

        /*过滤角色信息*/
        function searchRole() {
            dgRole.datagrid('load', xz.serializeObject(searchForm));
        }

        /*清空过滤表单*/
        function clearSearch() {
            dgRole.datagrid('load', {});
            searchForm.find('input').val('');
        }
        /*打开设置角色权限的页面*/
        function showSetRolePerView() {
            $.validateUrl('/Admin_Areas/Sys_RolePermission/ShowRolePerSetView', setRolePer, xz.dealWith, 'Get');
        }
        /**
        *设置用户角色
        */
        function setRolePer() {
            var node = dgRole.datagrid('getSelected');
            if (node) {
                var pAdd = xz.dialog({
                    title: '设置角色权限',
                    width: 500,
                    height: 320,
                    iconCls: 'icon-add',
                    href: '/Admin_Areas/Sys_RolePermission/ShowRolePerSetView',
                    buttons: [{
                        text: '设置',
                        iconCls: 'icon-add',
                        handler: function () {
                            var f = pAdd.find('form');
                            f.form('submit', {
                                url: '/Admin_Areas/Sys_RolePermission/SetRolePers',
                                success: function (jsonData) {
                                    jsonData = $.parseJSON(jsonData);
                                    $.procAjaxMsg(jsonData, function () {
                                        dgRole.datagrid('reload');
                                        dgRole.datagrid('unselectAll');
                                        pAdd.dialog('close');
                                        $.alertMsg(jsonData.Msg, '操作提示', null);
                                    }, function () {
                                        $.alertMsg(jsonData.Msg, '操作提示', null);
                                    });
                                }
                            });
                        }

                    }],
                    onLoad: function () {
                        var f = pAdd.find('form');                     
                        var perIds = f.find('input[name=perIds]');
                        window.setTimeout(function () {
                            perIds.focus();
                        }, 100);                      
                      
                        perIds.combotree({
                            url: ' /Admin_Areas/Sys_Permission/GetAllPersForTree',
                            lines:true,
                            multiple: true,
                            editable: false,                        
                            width: 380

                        });
                        /*把选中的组织机构信息绑定到对应的表单上面*/
                        f.form('load', {
                            rId: node.rId,
                            rName: node.rName,
                            rRemark: node.rRemark, 
                            perIds: xz.getList(node.perIds)
                        });

                    }
                });
            } else {
                xz.messagerAlert('提示', '请选择要设置角色的用户！', 'error');
            }
        }
    </script>
</head>
<body class="easyui-layout" data-options="fit:true">
    <!--条件检索-->
    <div data-options="region:'north',title:'过滤条件',split:true,border:false,collapsed:true" style="height:90px;overflow:hidden;">
        <form id="searchForm">
            <table class="tableForm datagrid-toolbar" style="width:100%;height:100%;">
                <tr>
                    <th>角色名称</th>
                    <td><input name="rName" style="width:317px;" /></td>
                </tr>
                <tr>
                    <th>最后的修改日期</th>
                    <td>
                        <input class="easyui-datetimebox" name="operDateStart"
                               data-options="editable:false" style="width:155px">
                        至
                        <input class="easyui-datetimebox" name="operDateEnd"
                               data-options="editable:false" style="width:155px">
                        <a href="javascript:void(0);" class="easyui-linkbutton" data-options="iconCls:'icon-search'" onclick="searchRole();">过滤</a>
                        <a href="javascript:void(0);" class="easyui-linkbutton" data-options="iconCls:'icon-undo'" onclick="clearSearch();">清空</a>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <!--角色信息-->
    <div data-options="region:'center',border:false" style="overflow:hidden;">
        <table id="dgRole"></table>
    </div> 
</body>
</html>
